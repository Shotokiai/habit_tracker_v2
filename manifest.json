{
  "manifest_version": 3,
  "name": "Habit Tracker",
  "version": "1.0.0",
  "description": "Track your daily habits with a visual grid",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Habit Tracker"
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.jpg"
  }
}
